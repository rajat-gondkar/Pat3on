# ================================
# SERVER CONFIGURATION
# ================================
PORT=5001
NODE_ENV=development

# ================================
# DATABASE
# ================================
# Local MongoDB (install MongoDB or use MongoDB Atlas)
MONGODB_URI=mongodb://localhost:27017/pat3on

# For MongoDB Atlas (cloud), use this format:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/pat3on

# ================================
# JWT AUTHENTICATION
# ================================
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_min_32_chars
JWT_EXPIRE=7d

# ================================
# BLOCKCHAIN CONFIGURATION (SEPOLIA)
# ================================
# MockUSDC Token Address (Deployed on Sepolia)
MOCK_USDC_ADDRESS=Contract_address_of_the_USDC

# Subscription Manager Contract Address (Fill after deploying)
SUBSCRIPTION_MANAGER_ADDRESS=0x

# Sepolia RPC URL (for backend to interact with contracts)
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/API-Key

# Chain ID for Sepolia
CHAIN_ID=11155111

# Private key for backend contract interactions (optional, for automated tasks)
BACKEND_PRIVATE_KEY=

# ================================
# CORS CONFIGURATION
# ================================
FRONTEND_URL=http://localhost:3000

# Production frontend URL
# FRONTEND_URL=https://your-app.vercel.app
